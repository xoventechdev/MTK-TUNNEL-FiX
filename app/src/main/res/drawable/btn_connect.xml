<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="#00000000" />
            <solid android:color="@color/primary_color" />
            <corners android:topLeftRadius="100.0dip" android:topRightRadius="100.0dip" android:bottomLeftRadius="100.0dip" android:bottomRightRadius="100.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/primary_color" android:endColor="@color/primary_color" android:angle="90.0" />
            <stroke android:width="2.0dip" android:color="#00000000" />
            <corners android:topLeftRadius="100.0dip" android:topRightRadius="100.0dip" android:bottomLeftRadius="100.0dip" android:bottomRightRadius="100.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/primary_color" android:endColor="@color/primary_color" android:angle="90.0" />
            <stroke android:width="1.0dip" android:color="#00000000" />
            <corners android:topLeftRadius="100.0dip" android:topRightRadius="100.0dip" android:bottomLeftRadius="100.0dip" android:bottomRightRadius="100.0dip" />
        </shape>
    </item>
</selector>
