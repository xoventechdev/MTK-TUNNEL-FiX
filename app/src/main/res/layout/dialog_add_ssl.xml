<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:gravity="bottom"
            android:background="@color/colorAccent"
            android:id="@+id/color_bg"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18.0sp"
                android:layout_marginStart="25.0dip"
                style="@style/TextViewTheme_dark"
                android:id="@+id/notiftext1"
                android:text="SSL Network" />

        </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/black_light" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20.0dip"
            android:layout_weight="1.0">

            <androidx.core.widget.NestedScrollView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:padding="10.0dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/title1"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="3dp"
                        android:background="@color/colorAccent"
                        android:paddingLeft="10dp"
                        android:text="Select Logo" />

                    <Spinner
                        android:layout_height="40.0dip"
                        android:layout_width="fill_parent"
                        android:background="@drawable/bg_spin"
                        android:id="@+id/pLogo">

                    </Spinner>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/title2"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="3dp"
                        android:background="@color/colorAccent"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10.0dip"
                        android:text="Select protocol" />

                    <Spinner
                        android:layout_height="40.0dip"
                        android:layout_width="fill_parent"
                        android:layout_marginBottom="10.0dip"
                        android:background="@drawable/bg_spin"
                        android:entries="@array/ssl_type"
                        android:id="@+id/sslmethod">

                    </Spinner>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/title3"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="3dp"
                        android:background="@color/colorAccent"
                        android:paddingLeft="10dp"
                        android:text="Select Server" />

                    <RadioGroup
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:background="@drawable/bg_spin"
                        android:orientation="horizontal"
                        android:id="@+id/server_type">

                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1.0"
                            android:id="@+id/cf_radio"
                            android:text="CF" />

                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1.0"
                            android:id="@+id/ws_radio"
                            android:text="WS" />

                        <RadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1.0"
                            android:id="@+id/http_radio"
                            android:text="HTTP" />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:id="@+id/TextInputLayout1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginTop="10.0dip">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:hint="Network Name"
                            android:singleLine="true"
                            android:id="@+id/etSSLName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:id="@+id/TextInputLayout2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:hint="SNI (eg: m.google.com)"
                            android:singleLine="true"
                            android:id="@+id/etSSLSNI" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="5.0dip"
                        android:id="@+id/etSSLPayload_ly">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_weight="1"
                            android:id="@+id/etNetworkPayloadInput">

                            <EditText
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:hint="Payload"
                                android:isScrollContainer="true"
                                android:maxLines="5"
                                tools:ignore="TouchTargetSizeCheck"
                                android:id="@+id/etSSLPayload" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:id="@+id/TextInputLayout3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:hint="Custom SSL Port (optional)"
                            android:maxLines="5"
                            android:id="@+id/etSSLPort" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:orientation="vertical"
                        android:id="@+id/sslproxylay">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/title4"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="3dp"
                            android:background="@color/colorAccent"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Proxy Settings" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:id="@+id/TextInputLayout4"
                                android:layout_marginEnd="2.5dip"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_weight="1.0">

                                <EditText
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:hint="Squid Proxy/IP"
                                    android:layout_marginStart="2.5dip"
                                    android:singleLine="true"
                                    android:id="@id/etSquidProxy"
                                    android:text="[Default]" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:id="@+id/TextInputLayout5"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_weight="2.0">

                                <EditText
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:hint="Squid Port"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:id="@id/etSquidPort"
                                    android:text="8080" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@id/ckUseDefProxy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use Default Proxy"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:id="@+id/TextInputLayout6"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:hint="Network Info"
                            android:singleLine="true"
                            android:id="@+id/etSSLInfo" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_height="40dp"
            android:layout_width="100.0dip"
            android:id="@+id/cancel"
            android:gravity="center"
            android:padding="10.0dip"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10.0dip">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/cancel_tv"
                android:text="Cancel" />

        </LinearLayout>

        <RelativeLayout
            android:layout_height="40.0dip"
            android:layout_width="150.0dip"
            android:layout_marginEnd="10.0dip"
            android:background="@drawable/card_frame3"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/save">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/savetv"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:text="Save" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>