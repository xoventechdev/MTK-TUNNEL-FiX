<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<androidx.appcompat.widget.LinearLayoutCompat
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:background="@drawable/ic_map"
			android:layout_width="fill_parent"
			android:layout_height="150.0dip"
			android:layout_marginStart="20.0dip"
			android:layout_marginEnd="20.0dip">

			<LinearLayout
				android:gravity="center"
				android:id="@+id/ll_logo_account"
				android:layout_width="48.0dip"
				android:layout_height="48.0dip"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="true"
				android:elevation="2.0dip">

				<ImageView
					android:id="@+id/imageView_appLogo"
					android:layout_width="50.0dip"
					android:layout_height="50.0dip"
					android:contentDescription="@string/app_name"
					android:layoutDirection="ltr"
					app:srcCompat="@drawable/icon_icon" />
			</LinearLayout>

			<LinearLayout
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="16.0dip"
				android:layout_toEndOf="@+id/ll_logo_account">

				<TextView
					android:textSize="16.0sp"
					android:textColor="@color/colorText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/app_name"
					android:fontFamily="@font/montserrat_bold" />

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:textSize="11.0sp"
						android:textColor="@color/colorText"
						android:id="@+id/user_level"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Virtual private network"
						android:fontFamily="@font/montserrat_regular"
						android:paddingStart="4.0dip"
						android:paddingEnd="4.0dip" />
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
