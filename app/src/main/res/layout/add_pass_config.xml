<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:id="@+id/color_bg"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/codeTv"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="18.0dip"
            android:layout_marginLeft="25.0dip"
            style="@style/TextViewTheme_dark"
            android:layout_marginTop="30.0dip"
            android:text="Admin PassCode" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="?android:dividerVertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_height="52dp"
            android:layout_width="62dp"
            android:background="@drawable/bg_spin"
            android:gravity="center"
            android:maxLength="1"
            android:focusable="true"
            android:inputType="number"
            android:id="@+id/editText1" />

        <EditText
            android:layout_height="52dp"
            android:layout_width="62dp"
            android:background="@drawable/bg_spin"
            android:gravity="center"
            android:longClickable="false"
            android:maxLength="1"
            android:layout_marginStart="4dp"
            android:inputType="number"
            android:id="@+id/editText2" />

        <EditText
            android:layout_height="52dp"
            android:layout_width="62dp"
            android:background="@drawable/bg_spin"
            android:gravity="center"
            android:longClickable="false"
            android:layout_marginHorizontal="4dp"
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/editText3" />

        <EditText
            android:layout_height="52dp"
            android:layout_width="62dp"
            android:background="@drawable/bg_spin"
            android:gravity="center"
            android:longClickable="false"
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/editText4" />

    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="5.0dip"
        android:layout_marginVertical="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30.0dip"
        android:id="@+id/confirm">

        <LinearLayout
            android:layout_height="40dp"
            android:layout_width="100.0dip"
            android:id="@+id/cancel_btn"
            android:gravity="center"
            android:padding="10.0dip"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10.0dip">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/appButton1"
                android:text="Cancel" />

        </LinearLayout>

        <RelativeLayout
            android:layout_height="40.0dip"
            android:layout_width="150.0dip"
            android:layout_centerInParent="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/card_frame3"
            android:layout_alignParentEnd="true"
            android:id="@+id/appButton2">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/confirm_btn"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:letterSpacing="0.1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Confirm" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>