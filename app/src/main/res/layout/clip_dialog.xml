<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:gravity="right"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"
         android:background="@color/colorAccent"
         android:id="@+id/color_bg"        
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
            android:id="@+id/notiftext1"
             android:textAppearance="?android:textAppearanceMedium"
             android:textSize="18.0dip"
             android:layout_marginLeft="25.0dip"
             style="@style/TextViewTheme_dark"
             android:layout_marginTop="30.0dip"
             android:text="Config Clipboard" />

        <View
             android:layout_height="1dp"
             android:layout_width="match_parent"
             android:background="?android:dividerVertical" />

    </LinearLayout>

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
        android:hint="Import your config from clipbord"
         android:layout_margin="25dp"/>

    <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"
         android:layout_marginBottom="10.0dip"
         android:gravity="center_vertical">

        <LinearLayout
             android:layout_height="40dp"
             android:layout_width="100.0dip"
            android:id="@+id/appButton0"
             android:gravity="center"
             android:padding="10.0dip"
             android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
             android:layout_marginStart="10.0dip">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:textColor="@color/colorPrimary"
                 android:letterSpacing="0.1"
                 android:gravity="center"
                 android:id="@+id/appButton1"
                android:textStyle="bold"
                 android:text="Cancel" />

        </LinearLayout>

        <RelativeLayout
             android:layout_height="40.0dip"
             android:layout_width="150.0dip"
             android:layout_centerInParent="true"
             android:layout_marginEnd="10.0dip"
             android:layout_alignParentEnd="true"
             android:background="@drawable/card_frame3"
             android:id="@+id/appButton2">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                android:id="@+id/import_tv"
                android:gravity="center"
                android:textStyle="bold"
                 android:textColor="@color/white"
                 android:layout_centerInParent="true"
                 android:letterSpacing="0.1"
                 android:text="Import" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>