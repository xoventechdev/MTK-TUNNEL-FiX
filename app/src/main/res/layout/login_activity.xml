<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/loginactivityLinearLayout1">

	<LinearLayout
		android:gravity="center"
		android:orientation="vertical"
		android:background="@drawable/background_shape"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<View
			android:layout_gravity="center"
			android:background="@drawable/icon_icon"
			android:layout_width="140.0dip"
			android:layout_height="140.0dip"/>
		<TextView
			android:textSize="20sp"
			android:typeface="serif"
			android:textStyle="bold"
			android:gravity="center"
			android:textColor="@color/white"
			android:text="@string/app_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textAllCaps="true"
			android:layout_marginBottom="20dp"
			android:fontFamily="@font/montserrat_regular" />
	</LinearLayout>

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="0.0dip"
		android:fillViewport="true"
		android:layout_weight="1.0">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:gravity="center|top"
				android:orientation="vertical"
				android:padding="25.0dip"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:layout_weight="1.0">

				<androidx.cardview.widget.CardView
					android:id="@+id/email_cardView"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20.0dip"
					android:layout_marginTop="20.0dip"
					android:layout_marginRight="20.0dip"
					app:cardCornerRadius="10dp"
					app:cardElevation="5.0dip">

					<EditText
						android:id="@+id/login_username"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:autofillHints=""
						android:background="@null"
						android:drawableStart="@drawable/ic_email_black_24dp"
						android:drawablePadding="16.0dip"
						android:hint="Username"
						android:inputType="text"
						android:maxEms="20"
						android:padding="12.0dip"
						android:textColorHint="#757575"
						android:textColor="@color/black"
						android:textSize="16.0sp" />

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:id="@+id/pass_cardview"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20.0dip"
					android:layout_marginTop="24.0dip"
					android:layout_marginRight="20.0dip"
					app:cardCornerRadius="10dp"
					app:cardElevation="5.0dip">

					<EditText
						android:autofillHints=""
						android:textSize="16.0sp"
						android:id="@+id/login_password"
						android:background="@null"
						android:padding="12.0dip"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:hint="Password"
						android:maxEms="20"
						android:drawablePadding="16.0dip"
						android:textColorHint="#757575"
						android:textColor="@color/black"
						android:inputType="text"
						android:drawableStart="@drawable/key"/>

				</androidx.cardview.widget.CardView>
				<androidx.cardview.widget.CardView
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginLeft="20.0dip"
					android:layout_marginTop="50.0dip"
					android:layout_marginRight="20.0dip"
					android:layout_marginBottom="40.0dip"
					app:cardBackgroundColor="@color/colorAccent"
					app:cardCornerRadius="10.0dip"
					app:cardElevation="5.0dip">

					<Button
						android:id="@+id/login_button"
						android:layout_width="fill_parent"
						android:layout_height="match_parent"
						android:background="?attr/selectableItemBackground"
						android:text="SAVE"
						android:textColor="@color/white" />
				</androidx.cardview.widget.CardView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout
		android:background="@drawable/background_shape"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:rotation="180">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:rotation="180"
			android:layout_centerInParent="true"
			android:textSize="9dp"
			android:textColor="@color/white"
			android:text="Â© MTK copyright 2024" />
	</RelativeLayout>
</LinearLayout>

