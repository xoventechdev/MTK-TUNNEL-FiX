<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_weight="1">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:gravity="center"
        android:background="@color/transparent"
        app:behavior_peekHeight="90dp"
        android:orientation="vertical"
        app:behavior_hideable="true"
        android:id="@+id/progress_bottom_sheet">

        <dev.xoventech.tunnel.vpn.view.RoundCornerLayout
            android:layout_height="90dp"
            android:layout_width="match_parent"
            app:bottomLeftEnabled="false"
            app:bottomRightEnabled="false"
            app:cornerRadius="20.0dip"
            app:topLeftEnabled="true"
            app:topRightEnabled="true">

        <LinearLayout
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:id="@+id/progress_bg"
            android:gravity="center|left"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/round1"
                    android:layout_margin="10dp"/>

                <ProgressBar
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:indeterminate="true" />

                <ImageView
                    android:layout_height="9dp"
                    android:layout_width="9dp"
                    android:src="@drawable/loadingpoint"
                    android:layout_margin="5dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/progPoint" />

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@null"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:textSize="15sp"
                    android:id="@+id/progTv"
                    android:text="Checking Please Wait..."/>

                <ProgressBar
                    android:layout_height="15dp"
                    android:layout_width="match_parent"
                    android:indeterminate="true"
                    android:layout_marginEnd="20dp"
                    style="?android:attr/progressBarStyleHorizontal"/>

            </LinearLayout>

        </LinearLayout>

        </dev.xoventech.tunnel.vpn.view.RoundCornerLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>