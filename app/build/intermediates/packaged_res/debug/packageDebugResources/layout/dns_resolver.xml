<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_weight="1.0">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="55dp"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:theme="@style/ToolbarTheme"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:minHeight="?attr/actionBarSize"
            app:titleTextAppearance="@style/ToolbarTitleTheme"
            app:subtitleTextAppearance="@style/ToolbarSubtitleTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1.0">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="6dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter site name"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:id="@+id/domainName_l">

                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        tools:ignore="TextSizeCheck"
                        android:id="@+id/ed_domainName" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

        </RelativeLayout>

        <Spinner
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:entries="@array/records"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/recordSpinner">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="2dp"
            android:id="@+id/dnsLookup_card"
            android:background="@drawable/card_frame3">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/transparent"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/dnsLookup"
                android:text="Start" />

        </RelativeLayout>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:id="@+id/dnsAnswer" />

    </LinearLayout>

</LinearLayout>