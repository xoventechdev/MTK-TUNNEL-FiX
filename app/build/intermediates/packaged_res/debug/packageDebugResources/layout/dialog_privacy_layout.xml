<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_icon"
            android:padding="5sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="@color/black"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />
        <TextView
            android:id="@+id/build_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:shadowColor="@color/connect_color"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Mtk-Build"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/privacy_policy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@string/app_name'
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='(\"we,\" \"us,\" or \"our\") is committed to protecting the privacy of our users. This Privacy Policy explains what information we collect, how we use it, and under what circumstances we may disclose it.'
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information We Collect"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We collect the following information to ensure the proper functioning and security of our VPN service:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Device ID: We collect your device's unique identifier to prevent unauthorized access to our VPN. This helps us maintain the security of your connection and prevent misuse of our service."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Device Model: We collect your device model to ensure compatibility with our VPN app and provide optimal performance."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information We Do Not Collect"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We do not collect or store any data that can be used to track your online activity, including:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Browsing history: We do not track the websites you visit while connected to our VPN."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Traffic destination: We do not monitor the destination of your internet traffic."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Data content: We do not access or store the content of your data transfers."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• DNS queries: We do not log your DNS queries to protect your privacy."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use of Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We use the collected information solely for the following purposes:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Providing and maintaining the VPN service: We use your device ID to verify your authorization and ensure a secure connection. We use your device model to optimize the VPN app's performance for your device."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Preventing unauthorized access: We use device IDs to identify and prevent unauthorized attempts to access our VPN service."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sharing of Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We do not share any of the information we collect with third parties. We may only disclose information if required by law or to comply with a legal process."
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We take reasonable steps to protect the information we collect from unauthorized access, disclosure, alteration, or destruction. However, no internet transmission or electronic storage is completely secure."
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Choices"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can uninstall the app at any time to stop us from collecting information from your device."
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changes to this Privacy Policy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We may update this Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on our website or within the app."
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have any questions about this Privacy Policy, please contact us:"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Privacy Policy is compliant with the following principles:"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Transparency: We clearly explain what information we collect and how we use it."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Data Minimization: We only collect the information necessary to provide the VPN service."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Purpose Limitation: We use the collected information only for the stated purposes."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Security: We take steps to protect the information we collect."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• User Control: You have the choice to uninstall the app."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingBottom="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/update_check_ok_button"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="OKAY"
                android:background="@drawable/fix_basic_button_border"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"  />
        </FrameLayout>

    </LinearLayout>
</ScrollView>
