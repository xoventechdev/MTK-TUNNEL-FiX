<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:id="@+id/color_bg">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="18.0dip"
            android:layout_marginLeft="25.0dip"
            style="@style/TextViewTheme_dark"
            android:layout_marginTop="30.0dip"
            android:id="@+id/notiftext1"
            android:text="Notification" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="?android:dividerVertical" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:autoLink="web"
                android:layout_marginBottom="10.0dip"
                android:textColorLink="@color/colorPrimary"
                android:textSize="14.0dip"
                android:textColor="@color/black"
                android:layout_marginLeft="25.0dip"
                android:layout_marginRight="25.0dip"
                android:layout_marginTop="15.0dip"
                android:id="@+id/confimsg" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:layout_marginTop="10.0dip">

                <LinearLayout
                    android:layout_height="40dp"
                    android:layout_width="100.0dip"
                    android:gravity="center"
                    android:padding="10.0dip"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10.0dip"
                    android:id="@+id/appButton0">

                    <TextView
                        android:id="@+id/appButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Cancel"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_height="40.0dip"
                    android:layout_width="150.0dip"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/card_frame3"
                    android:id="@+id/appButton2">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:text="OK"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:letterSpacing="0.1"
                        android:gravity="center"
                        android:id="@+id/appButton2txt" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>